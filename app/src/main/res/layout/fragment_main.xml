<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".main.MainFragment">

    <FrameLayout
        android:id="@+id/bottom_nav_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/retro_bottom_nav"
        app:layout_constraintTop_toTopOf="parent" />

    <com.doubtless.doubtless.main.bottomNav.RetroBottomNav
        android:id="@+id/retro_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.doubtless.doubtless.theming.buttons.SecondaryButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:text="Home" />

        <com.doubtless.doubtless.theming.buttons.SecondaryButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:text="Profile" />

    </com.doubtless.doubtless.main.bottomNav.RetroBottomNav>

</androidx.constraintlayout.widget.ConstraintLayout>